{
    "name": "com.edp.blueprint.nodejs.ms",
    "version": "1.0.0",
    "description": "Blueprint nodejs microservice - EDPs Template project for PAAS microservice to deploy in Google App Engine",
    "scripts": {
        "sonar": "sonar-scanner",
        "_": "******************************************************************************************************",
        "1. CLEAN": "******************************* CLEAN DISTS & VENDORS FOLDERS *********************************",
        ".": "******************************************************************************************************",
        "clean": "concurrently --kill-others-on-fail \"npm run clean:nodejs-fe\" ",
        "clean:nodejs-fe": "cd service.app && rm -rf ./dist && rm -rf ./node_modules",
        "__": "******************************************************************************************************",
        "2. INSTALL": "*********************************** INSTALL ALL MODULES **************************************",
        "...": "******************************************************************************************************",
        "install:modules": "concurrently --kill-others-on-fail \"npm run install:nodejs-fe\"",
        "install:nodejs-fe": "cd service.app && npm install --legacy-peer-deps",
        "___": "******************************************************************************************************",
        "3. DELETE": "*********************************** INSTALL ALL MODULES **************************************",
        "..": "******************************************************************************************************",
        "delete:modules": "concurrently --kill-others-on-fail \"npm run delete:line\"",
        "delete:line": "sed -i '164d' service.app/node_modules/@revolist/angular-datagrid/dist/proxies/revogrid.d.ts",
        "____": "****************************************************************************************************",
        "4. BUILD": "*************************************** BUILD ALL MODULES **************************************",
        "....": "****************************************************************************************************",
        "build-edp": "npm install --ignore-scripts && cd service.app && npm install --ignore-scripts && npm run build:ssr &&  npm run build", 
        "build": "concurrently --kill-others-on-fail \"npm run build:nodejs-fe\"",
        "build:nodejs-fe": "cd service.app",
        "_____": "****************************************************************************************************",
        "5. TEST": "*************************************** BUILD ALL MODULES **************************************",
        ".....": "****************************************************************************************************",
        "unit-test:app": "cd service.app",
        "______": "**************************************************************************************************",
        "6. BUILD & SERVE ALL MODULES": "********* LOCAL DEV FRESH BUILD & SERVE ALL MODULES ************************",
        "......": "**************************************************************************************************",
        "app": "npm run clean && npm run install:modules && npm run delete:modules && npm run build"
    },
    "dependencies": {
        "assert": "^2.0.0",
        "browserify-zlib": "^0.2.0",
        "buffer": "^6.0.3",
        "concurrently": "^5.1.0",
        "saml-encoder-decoder-js": "^1.0.2",
        "stream": "^0.0.2",
        "util": "^0.12.5",
        "zlib": "^1.0.5"
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "eslint-plugin-sonarjs": "^0.5.0",
        "husky": "^4.2.1",
        "sonar-scanner": "^3.1.0",
        "stylelint": "^13.0.0",
        "typescript": "3.5.3"
    }
}
